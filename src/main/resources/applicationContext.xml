<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="dbms" class="java.lang.String">
        <constructor-arg value="H2"/>
    </bean>

    <bean id="pizzaService" class="com.nhnent.benjamin.service.PizzaService" factory-method="getInstance"/>
    <bean id="pepperoniPizza" factory-bean="pizzaService" factory-method="makePizza"/>
</beans>